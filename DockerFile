# Use Node.js LTS version
FROM node:18

# Set app working directory inside container
WORKDIR /app

# Copy everything into the container (/backend, /public, /admin, etc.)
COPY . .

# Move into backend folder to install dependencies
WORKDIR /app/backend
RUN npm install --omit=dev

# Expose the port (matches your server.js PORT)
EXPOSE 8080

# Start your app
CMD ["node", "server.js"]
